<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="othelloApp.MenuController">
   <children>
      <Button fx:id="settingsButton" layoutX="261.0" layoutY="250.0" mnemonicParsing="false" onAction="#settings" prefHeight="48.0" prefWidth="163.0" text="SETTINGS">
         <font>
            <Font name="American Typewriter" size="22.0" />
         </font></Button>
      <Button fx:id="startGameButton" alignment="CENTER" layoutX="75.0" layoutY="249.0" onAction="#startGame" prefHeight="48.0" prefWidth="163.0" text="START GAME" textAlignment="CENTER">
         <font>
            <Font name="American Typewriter Bold" size="22.0" />
         </font></Button>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="81.0" layoutY="14.0" prefHeight="80.0" prefWidth="359.0" text="OTHELLO" textFill="#9e1271">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
      </Label>
      <Button fx:id="howToPlayButton" layoutX="75.0" layoutY="312.0" mnemonicParsing="false" onAction="#howToPlay" prefHeight="48.0" prefWidth="163.0" text="HOW TO PLAY">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <Button layoutX="261.0" layoutY="312.0" mnemonicParsing="false" onAction="#quit" prefHeight="48.0" prefWidth="163.0" text="QUIT">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <ImageView fitHeight="135.0" fitWidth="138.0" layoutX="191.0" layoutY="94.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@othelloPic.JPG" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
